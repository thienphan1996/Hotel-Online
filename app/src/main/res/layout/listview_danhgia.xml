<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTenNguoiDanhGia"
            android:text="Nguyễn Văn A"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDiemNguoiDanhGia"
            android:text="09/10"
            android:layout_marginLeft="10dp"
            android:textColor="#311B92"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNoiDungNguoiDanhGia"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Không gian rộng rãi,thoải mái,các món ăn rất ngon , mọi thứ đều khá ok . Nhân viên tư vấn nhiệt tình ."
        android:background="@drawable/textview_danhgia"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:paddingVertical="20dp"/>

</LinearLayout>